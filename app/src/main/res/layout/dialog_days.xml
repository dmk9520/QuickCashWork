<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_15sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Select Day"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
       android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_sunday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_12sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_monday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="@dimen/_13sdp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tuesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wednesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_thursday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_friday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_saturday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp" />

    </RelativeLayout>
</LinearLayout>